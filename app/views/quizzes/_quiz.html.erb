<div id="<%= dom_id quiz %>">
  <div class="flex">
    <h1 class="font-bold text-xl text-base-content">
      <%= quiz.title %>
    </h1>

    <p class="prose text-base-content">
      <%= quiz.description %>
    </p>
    
  </div>

  <strong>Questions</strong> <br>
  <%= link_to 'Add question', new_quiz_question_path(@quiz), class: btn_class %>      
  <% quiz.questions.each do |question|%>
    <div class="overflow-x-auto">
      <table id="questions" class="table">
        <thead class="text-left">
        <tr>
          <td> <%= question.question_text %></td>
          <td> <%= button_to "Delete question", question, method: :delete, class: "btn btn-accent btn-xs" %></td>
          <td> <%= link_to "Edit question", edit_question_path(question), class: "btn btn-accent btn-xs" %></td>
        </tr>
        </thead>
        <tbody>
        <% question.answers.each do |answer| %>
          <tr> 
            <td>
              <%= answer.answer_text %>
            </td>
            <td>
              <%= answer.correct  ? "pareizi" : "nepareizi" %>
            </td>
            <td>
              <%= format_date answer.created_at %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  <% end %>    
</div>
