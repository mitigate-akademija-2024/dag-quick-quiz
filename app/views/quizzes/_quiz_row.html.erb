<tr class="hover">
<td><%= quiz.id %></td>
<td><%= quiz.title %></td>
<td><%= quiz.description.truncate(30) %></td>
<td><%= format_date quiz.created_at %></td>
<td><%= quiz.user.username.blank? ? "No name" : quiz.user.username %></td>
<% if user_signed_in? && quiz.user == current_user%>
<td><%= link_to("Edit", quiz, class: 'inline-block rounded border border-indigo-600 px-4 py-1 text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500') %></td>
<td><%= link_to("Open", start_quiz_path(quiz.id), class: 'inline-block rounded border border-indigo-600 px-4 py-1 text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500') %></td>
<% else %>
<td></td>
<td><%= link_to("Open", start_quiz_path(quiz.id), class: 'inline-block rounded border border-indigo-600 px-4 py-1 text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500') %></td>
<% end %>
</tr>
