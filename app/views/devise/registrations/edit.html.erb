<div class="flex justify-center p-6">
  <div class="max-w-sm px-10">
    <h2 class="font-bold text-center text-xl text-base-content">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <label class="input input-bordered flex items-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4 opacity-70">
          <path
            d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
          <path
            d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
        </svg>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input grow", placeholder: "Email" %>
      </label>

      <label class="input input-bordered flex items-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4 opacity-70">
          <path
            d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
        </svg>
        <%= f.text_field :username, class: "input grow", placeholder: "Username" %>
      </label>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <label class="input input-bordered flex items-center gap-2 mt-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 16 16"
        fill="currentColor"
        class="h-4 w-4 opacity-70">
        <path
          fill-rule="evenodd"
          d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
          clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password, autocomplete: "new-password", class: "input grow", placeholder: "New password" %>
      </label>
      <i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br/>

      <label class="input input-bordered flex items-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4 opacity-70">
          <path
            fill-rule="evenodd"
            d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
            clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input grow", placeholder: "Confirm password" %>
      </label>

      <label class="input input-bordered flex items-center gap-2 mt-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 16 16"
          fill="currentColor"
          class="h-4 w-4 opacity-70">
          <path
            fill-rule="evenodd"
            d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
            clip-rule="evenodd" />
        </svg>
        <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "input grow", placeholder: "Current password" %>
      </label>
      <i>(we need your current password to confirm your changes)</i>

      <div class="flex my-4 flex-col">
        <div class="flex my-4 justify-evenly">
          <%= link_to "Back", :back, class: "btn btn-primary" %>
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
        <% end %>

        <div class="text-center">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-warning", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
    </div>
  </div>

  <div class="px-10">
      <h2 class="font-bold text-center text-xl text-base-content">Completed quizzes</h2>
    <table class="table">
    <thead>
        <tr>
            <th>Quiz</th>
            <th>High score</th>
            <th>Try again</th>
        </tr>
    </thead>
    <tbody>
        <% current_user.total_scores.group(:quiz_id).each do |quiz|%>
            <tr class="hover">
              <td><%= quiz.quiz.title %></td>
              <td><%= current_user.total_scores.where(quiz_id: quiz.quiz_id).order(score: :desc).first.score %></td>
              <td><%= link_to "Open", start_quiz_path(quiz.quiz_id), class: "btn btn-secondary btn-xs" %></td>
            </tr>
        <% end %>
    </tbody>
</table>
  </div>
</div>