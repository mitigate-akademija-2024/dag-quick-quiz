<h2 class="font-bold text-center text-xl text-base-content">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="container max-w-sm mx-auto ">
  <label class="input input-bordered flex items-center gap-2 mt-2">
    <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 16 16"
    fill="currentColor"
    class="h-4 w-4 opacity-70">
    <path
      d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
    </svg>
    <%= f.text_field :login, autofocus: true, autocomplete: "email", class: "input grow", placeholder: "Email or username" %>
  </label>

  <label class="input input-bordered flex items-center gap-2 mt-2">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 16 16"
    fill="currentColor"
    class="h-4 w-4 opacity-70">
    <path
      fill-rule="evenodd"
      d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
      clip-rule="evenodd" />
  </svg>
  <%= f.password_field :password, autocomplete: "current-password", class: "input grow", placeholder: "Password" %>
  </label>

  <% if devise_mapping.rememberable? %>
    <div class="field my-4">
      <%= f.check_box :remember_me, class: "checkbox checkbox-lg" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="text-center">
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
